

<div class="song">
  <b>Name:</b>
  <%= @song.name %>
  <br>
  <b>Artist:</b>
  <%= @song.artist %>
  <br>
  <b>Genre:</b>
  <%= @song.genre %>
  <br>
  <b>Album:</b>
  <%= @song.album %>
  <br>
  <b>Price:</b>
  <%= @song.price %>
  <br>
  <b>Audiofile:</b>
  <%= @song.audiofile %>
</div>

<% if can? :update, @song %>
<%= link_to 'Edit', edit_song_path(@song) %> |
<%= end %>
<%= link_to 'Back', songs_path %>
